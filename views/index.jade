extends layout

block content
	if !user
		div(class='jumbotron')
			h1 Welcom to miniTwitter
			p miniTwitter is built by NodeJS, mongoDB and deployed on AWS EC2 instance.
			p This website will be updated frequently since I'm keeping adding features to it and changing UI.
			p
				a(class='btn btn-primary btn-large', href='/login') Log in
				a(class='btn btn-large', href='/reg') Register
	else
		div(class= 'container-fluid')
			div(class= 'row')
				div(class= 'col-sm-9 col-sm-offset-1 col-md-10 col-md-offset-1')
					include say
					include posts